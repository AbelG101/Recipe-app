<% if notice.present? %>
  <div class="flex items-center bg-teal-100 border-t-4 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md" role="alert">
    <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
    <p><%= notice %></p>
  </div>
<%end %>
<div class="p-5">
  <div>
    <%= link_to recipes_path do %>
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
      </div>
    <% end %>
  </div>
  <h1 class="font-bold text-3xl text-center mb-8"><%= @recipe.name %></h1>
  <div class="flex justify-between w-[60%] ml-auto mr-auto">
    <div class="flex flex-col justify-between">
      <h3 class="text-xl my-3 flex justify-between">Preparation time: <%= @recipe.preparation_time %></h3>
      <h3 class="text-xl my-3 flex justify-between">Cooking time: <%= @recipe.cooking_time %></h3>
      <p> <%= @recipe.description %></p>
      <%= link_to "Generate shopping list", general_shopping_list_path(@recipe.id), class: "inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out my-4 self-start"%>
    </div>
    <div class="flex flex-col justify-between"> 
      <label class="inline-flex relative items-center mb-5 cursor-pointer">
        <% if @recipe.public %>
          <input type="checkbox" value="" class="sr-only peer" checked disabled>
        <%else%>
          <input type="checkbox" value="" class="sr-only peer" disabled>
        <% end %>
        <div class="w-11 h-6 bg-gray-200 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
        <span class="ml-3 text-sm font-medium text-gray-400 dark:text-gray-500">Public</span>
      </label>
      <% if @recipe.user == current_user %>
        <%= link_to "Add ingredient", new_recipe_recipe_food_path(@recipe), class: "inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out my-2"%>
      <% end %>
    </div>
  </div>
  <hr class="my-8 h-px bg-gray-200 border-0 dark:bg-gray-700">
  <div class="flex justify-center mt-5">
    <table class="min-w-fit ">
      <thead class="border-b">
          <tr>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Food</th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Quantity</th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Value</th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Actions</th>
          </tr>
      </thead>
      <tbody>
        <% @recipe_foods.each do |recipe_food| %>
        <tr class="border-b">
          <%= render recipe_food %>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <div class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
              <%= button_to "Delete", recipe_recipe_food_path(@recipe, recipe_food), method: :delete %>
            </div>
          </td>
          <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
            <div class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
              <%= link_to "Edit", edit_recipe_recipe_food_path(@recipe, recipe_food) %>
            </div>
          </td>
        <% end %>
        <tr>
      </tbody>
    </table>
  </div>
</div>
